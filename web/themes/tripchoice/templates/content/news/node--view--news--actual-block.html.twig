<div class="news-actual-block row">
  <div class="news-actual-block-image col-4">
    {% include 'aventus:image' with {
      'file': node.field_teaser_image.entity.field_media_image.target_id,
      'ratio': 'square',
      'responsive_style': true,
      'link': url ,
      'alt_text': node.field_teaser_image.entity.field_media_image.alt,
    } %}
  </div>
  <div class="news-actual-block-title col-8">
    <a href="{{ url }}">
      <h3>{{ node.title.value }}</h3>
    </a>
  </div>
</div>
