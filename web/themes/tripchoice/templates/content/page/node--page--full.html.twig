{% set sidebar = content.field_sidebar_content|render %}

<article role="main" class="row">
  <section class="content {% if sidebar|trim %} col-12 col-lg-8 {% else %}{% endif %}">
    {{ content.field_paragraphs }}
  </section>

  {% if sidebar|trim %}
    <aside class="sidebar col-12 col-md-4" role="complementary">
      {{ content.field_sidebar_content }}
    </aside>
  {% endif %}
</article>
