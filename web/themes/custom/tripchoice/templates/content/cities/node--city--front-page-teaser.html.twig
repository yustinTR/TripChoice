<a href="{{ url }}">
  <div class="city-item" style="background-image: url({{ file_url(node.field_header_image.entity.field_media_image.entity.fileuri ) }})">
    <div class="city-item--blur">
      <div class="city-item--container">
        <div class="city-item--text">
          <div class="city-item--title"><h2>{{ node.title.value }}</h2></div>
          <div class="city-item--qoute"><p>{{ node.field_introduction.value| raw }}</p></div>
        </div>
      </div>
    </div>
    <div class="city-item--number">
      <p><span class="current-number"></span></p>
      <p class="max-numbers"></p>
    </div>
  </div>
</a>

