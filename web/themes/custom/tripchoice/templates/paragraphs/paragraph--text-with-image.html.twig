{#
/**
 * @file
 * Template for paragraph-text-with-image.
 *
 * Available input variables:
 * - paragraph.field_title: text (will be used in extended template)
 * - paragraph.field_image: image
 * - paragraph.field_text: text
 */
#}

{% extends '@aventus/templates/paragraphs/paragraph.html.twig' %}

{% block paragraph_content %}
  <div class="paragraph-content text-with-image">
    <div class="text-with-image-title">
      {% include 'aventus:title' with {
        'element': 'h2',
        'title': paragraph.field_title.value,
      } %}
    </div>
    {% if paragraph.field_image.entity.field_media_image.target_id %}
      {% include 'aventus:image' with {
        'file': paragraph.field_image.entity.field_media_image.target_id,
        'ratio': 'landscape',
        'responsive_style': true,
        'link': content.field_url.0['#url']| default() ,
        'caption': paragraph.field_caption.value|default()|striptags ,
        'alt_text': paragraph.field_image.entity.field_media_image.alt,
        'extra_classes': 'col-md-6',
        'float': paragraph.field_image_alignment.value,
      } %}
    {% endif %}
    {{ paragraph.field_text.value|raw }}
  </div>
{% endblock %}
