{
  "name": "finalist/base-project",
  "description": "Project template for Finalist Drupal projects. Based on the drupal/recommended-project project.",
  "type": "project",
  "license": "GPL-2.0-or-later",
  "homepage": "https://bitbucket.org/finalistit/dbp-base-project",
  "support": {
    "docs": "https://www.drupal.org/docs/user_guide/en/index.html",
    "chat": "https://www.drupal.org/node/314178"
  },
  "repositories": [
    {
      "type": "composer",
      "url": "https://packages.drupal.org/8"
    },
    {
      "type": "composer",
      "url": "https://packeton.finalist.nl"
    }
  ],
  "require": {
    "composer/installers": "^2.0",
    "cweagans/composer-patches": "^1.7",
    "drupal/admin_toolbar": "^3.3",
    "drupal/allowed_formats": "^2.0",
    "drupal/conditional_fields": "^4.0@alpha",
    "drupal/config_ignore": "^2.4",
    "drupal/config_profile": "^1.1@beta",
    "drupal/config_split": "^2.0@RC",
    "drupal/core-composer-scaffold": "^10.0",
    "drupal/core-recommended": "^10.0",
    "drupal/environment_indicator": "^4.0",
    "drupal/facets": "^2.0",
    "drupal/field_group": "^3.4",
    "drupal/focal_point": "^2.0@alpha",
    "drupal/gin": "^3.0@RC",
    "drupal/gin_login": "^2.0",
    "drupal/gin_toolbar": "^1.0@RC",
    "drupal/honeypot": "^2.1",
    "drupal/imagemagick": "^3.4",
    "drupal/linkit": "^6.0@RC",
    "drupal/media_library_edit": "^3.0",
    "drupal/menu_admin_per_menu": "^1.5",
    "drupal/metatag": "^1.22",
    "drupal/paragraphs": "^1.15",
    "drupal/pathauto": "^1.11",
    "drupal/rabbit_hole": "^1.0@beta",
    "drupal/scheduler": "^2.0@RC",
    "drupal/search_api": "^1.28",
    "drupal/search_api_solr": "^4.2",
    "drupal/webform": "^6.2@beta",
    "drush/drush": "^11.5",
    "finalist/finalist_base_theme": "^0.0.5",
    "finalist/finalist_profile": "^0.1.4",
    "oomphinc/composer-installers-extender": "^2.0"
  },
  "require-dev": {
    "behat/behat": "^3.12",
    "behat/mink-goutte-driver": "^2.0",
    "dmore/behat-chrome-extension": "^1.4",
    "dmore/chrome-mink-driver": "^2.9",
    "drevops/behat-screenshot": "^1.2",
    "drupal/coder": "^8.3",
    "drupal/core-dev": "^10.0",
    "drupal/devel": "^5.1",
    "drupal/drupal-extension": "^5.0@RC",
    "drupal/potx": "^1.0",
    "phpmd/phpmd": "^2.13",
    "se/selenium-server-standalone": "^3.141",
    "webship/behat-html-formatter": "^1.0"
  },
  "conflict": {
    "drupal/drupal": "*"
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "config": {
    "allow-plugins": {
      "composer/installers": true,
      "drupal/core-composer-scaffold": true,
      "phpstan/extension-installer": true,
      "dealerdirect/phpcodesniffer-composer-installer": true,
      "cweagans/composer-patches": true,
      "oomphinc/composer-installers-extender": true
    },
    "bin-dir": "bin/",
    "sort-packages": true,
    "discard-changes": true
  },
  "extra": {
    "composer-exit-on-patch-failure": true,
    "enable-patching": true,
    "drupal-scaffold": {
      "locations": {
        "web-root": "web/"
      },
      "excludes": [
        "robots.txt",
        ".htaccess",
        "sites/development.services.yml"
      ],
      "file-mapping": {
        "[web-root]/robots.txt": false,
        "[web-root]/.htaccess": false,
        "[web-root]/sites/development.services.yml": false
      }
    },
    "installer-types": [
      "finalist-module",
      "finalist-theme",
      "finalist-profile"
    ],
    "installer-paths": {
      "web/core": [
        "type:drupal-core"
      ],
      "web/libraries/{$name}": [
        "type:drupal-library"
      ],
      "web/modules/contrib/{$name}": [
        "type:drupal-module"
      ],
      "web/profiles/contrib/{$name}": [
        "type:drupal-profile"
      ],
      "web/themes/contrib/{$name}": [
        "type:drupal-theme"
      ],
      "drush/Commands/contrib/{$name}": [
        "type:drupal-drush"
      ],
      "web/modules/custom/{$name}": [
        "type:drupal-custom-module"
      ],
      "web/themes/custom/{$name}": [
        "type:drupal-custom-theme"
      ],
      "web/modules/finalist-contrib/{$name}": [
        "type:finalist-module"
      ],
      "web/themes/finalist-contrib/{$name}": [
        "type:finalist-theme"
      ],
      "web/profiles/finalist-contrib/{$name}": [
        "type:finalist-profile"
      ]
    }
  }
}
